#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a,i,j,z;
    scanf("%d",&a);
    for(i=a;i>=1;i--)
    {
        for(z=a-i;z>=1;z--)
        {
            printf(" ");
        }
        for(j=1;j<=i+i-1;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    for(i=1+1;i<=a;i++)
    {
        for(z=a-i;z>=1;z--)
        {
            printf(" ");
        }
        for(j=1;j<=i+i-1;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
