#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a,i,j,z;
    scanf("%d",&a);
    for(i=1;i<=a;i++)
    {
        for(z=0;z<i;z++)
        {
            printf("*");
        }
        for(j=1;j<=2*(a-i);j++)
        {
            printf(" ");
        }
        for(z=0;z<i;z++)
        {
            printf("*");
        }
        printf("\n");
    }
    for(i=a-1;i>=1;i--)
    {
        for(z=0;z<i;z++)
        {
            printf("*");
        }
        for(j=1;j<=2*(a-i);j++)
        {
            printf(" ");
        }
        for(z=0;z<i;z++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
